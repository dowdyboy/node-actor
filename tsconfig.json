{
	"compilerOptions": { 
		"module": "commonjs", 
		"target": "es5", 
		"noImplicitAny": true,
		"declaration": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"baseUrl": ".",
		"outDir": "dist", 
		"paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
		},
		"lib": [ "es2015" ]
	}, 
	"include": [ 
		"src/**/*"
	]
}